package main;

import javax.swing.JPanel;

public class GamePanel extends JPanel{

	//SCREEN SETTINGS
	final int originalTileSize = 16; //16x16 Tile (Default size)
	//will scale due to monitor resolutions varying.
	final int scale = 3;
	
	final int tileSize = originalTileSize * scale; //48x48 Tile
	// 16 x 12 (4:3)
	final int maxScreenCol = 16;  //horizontal
	final int maxScreenRow = 12;  //vertical
	final int screenWidth = tileSize * maxScreenCol; // 16 * 16 = 758 pixels
	final int screenHeight = tileSize * maxScreenRow;
}
