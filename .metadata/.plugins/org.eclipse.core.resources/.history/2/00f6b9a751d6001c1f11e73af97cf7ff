package main;

import java.awt.Color;
import java.awt.Dimension;

import javax.swing.JPanel;

public class GamePanel extends JPanel{

	//SCREEN SETTINGS
	final int originalTileSize = 16; //c16x16 Tile (Default size)
	// will scale due to monitor resolutions varying.
	final int scale = 3;
	
	final int tileSize = originalTileSize * scale; //48x48 Tile
	final int maxScreenCol = 16;  //horizontal
	final int maxScreenRow = 12;  //vertical
	final int screenWidth = tileSize * maxScreenCol; // 758 pixels
	final int screenHeight = tileSize * maxScreenRow; // 576 pixels
	
	//CONSTRUCTOR
	public GamePanel() {
	
	this.setPreferredSize(new Dimension(screenWidth, screenHeight));
	this.setBackground(Color.black);
	
	}
}
